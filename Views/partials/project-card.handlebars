<a href="/portfolio/{{slug}}" class="hs-project-card">
  <div class="hs-project-media">
    <!-- Placeholder image (swap later) -->
    <div class="hs-project-media-inner">
      <span class="text-xs font-semibold text-brand-900">Project</span>
      <span class="mt-1 text-xs text-slate-600">Image placeholder</span>
    </div>
  </div>

  <div class="mt-4 space-y-2">
    <div class="flex items-start justify-between gap-3">
      <div>
        <h3 class="text-sm font-semibold text-brand-900">{{title}}</h3>
        <p class="text-xs text-slate-600">{{niche}} Â· {{location}}</p>
      </div>
      <span class="hs-badge">{{year}}</span>
    </div>

    <p class="text-sm text-slate-700 leading-6">{{summary}}</p>

    <div class="flex flex-wrap gap-2 pt-1">
      {{#each tags}}
        <span class="hs-pill">{{this}}</span>
      {{/each}}
    </div>
  </div>
</a>
