<header class="sticky top-0 z-50 border-b border-slate-200 bg-white/90 backdrop-blur">
  <div class="max-w-6xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between gap-4">

      <!-- Left: Logo + wordmark -->
      <a href="/" class="flex items-center gap-3">
        <img
          src="/images/logo.svg?v={{assetVersion}}"
          alt="{{#if site.businessName}}{{site.businessName}}{{else}}{{site.name}}{{/if}} logo"
          class="h-8 w-auto"
          loading="eager"
        />
        <span class="text-sm font-semibold text-slate-900">
          {{#if site.businessName}}{{site.businessName}}{{else}}{{site.name}}{{/if}}
        </span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-6" aria-label="Primary navigation">
        {{#if nav}}
          {{#each nav}}
            <a
              href="{{href}}"
              class="text-sm font-semibold text-slate-700 hover:text-brand-900 transition"
            >
              {{label}}
            </a>
          {{/each}}
        {{else}}
          {{#each site.nav}}
            <a
              href="{{href}}"
              class="text-sm font-semibold text-slate-700 hover:text-brand-900 transition"
            >
              {{label}}
            </a>
          {{/each}}
        {{/if}}
      </nav>

      <!-- Right: Primary CTA (optional but helps conversion + fills space) -->
      <div class="hidden md:block">
        <a
          href="{{#if cta.primaryHref}}{{cta.primaryHref}}{{else}}/contact{{/if}}"
          class="hs-btn-primary"
        >
          {{#if cta.primaryText}}{{cta.primaryText}}{{else}}Request a Quote{{/if}}
        </a>
      </div>
    </div>

    <!-- Mobile Nav -->
    <nav class="mt-3 flex flex-wrap gap-2 md:hidden" aria-label="Mobile navigation">
      {{#if nav}}
        {{#each nav}}
          <a
            href="{{href}}"
            class="inline-flex items-center rounded-lg border border-brand-300 bg-brand-50 px-3 py-2 text-xs font-semibold text-brand-900 shadow-surface-soft transition
                   hover:bg-brand-100 hover:shadow-surface"
          >
            {{label}}
          </a>
        {{/each}}
      {{else}}
        {{#each site.nav}}
          <a
            href="{{href}}"
            class="inline-flex items-center rounded-lg border border-brand-300 bg-brand-50 px-3 py-2 text-xs font-semibold text-brand-900 shadow-surface-soft transition
                   hover:bg-brand-100 hover:shadow-surface"
          >
            {{label}}
          </a>
        {{/each}}
      {{/if}}
    </nav>
  </div>
</header>
