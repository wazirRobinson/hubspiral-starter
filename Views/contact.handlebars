<section class="space-y-3">
  <h1 class="hs-h1 hs-title-brand">Let’s Turn Your Idea Into a Real Product</h1>
  <p class="hs-sub">
    Tell us what you’re building and we’ll reply with next steps, timeline, and a clear quote.
  </p>
</section>

{{#if errors}}
  <div class="mt-6 rounded-2xl border border-rose-200 bg-rose-50 p-5" role="alert" aria-live="polite">
    <h2 class="text-sm font-semibold text-rose-900">Please fix the following:</h2>
    <ul class="mt-3 list-disc space-y-1 pl-5 text-sm text-rose-800">
      {{#each errors}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
{{/if}}

<section class="hs-section">
  <div class="grid gap-6 lg:grid-cols-12">
    <!-- Left: Contact details -->
    <aside class="lg:col-span-4">
      <div class="hs-card-brand">
        <p class="hs-pill-brand">Get in touch</p>
        <h2 class="mt-4 text-xl font-semibold text-brand-900">Contact</h2>

        <div class="mt-4 space-y-3 text-sm">
          <p class="text-slate-700">
            <span class="font-semibold text-slate-900">Email:</span>
            <a class="ml-2 hs-link" href="mailto:hello@hubspiral.com">hello@hubspiral.com</a>
          </p>

          <p class="text-slate-700">
            <span class="font-semibold text-slate-900">Phone:</span>
            <a class="ml-2 hs-link" href="tel:15033813014">
              503<span class="px-1 text-slate-400">·</span>381<span class="px-1 text-slate-400">·</span>3014
            </a>
          </p>
        </div>

        <div class="mt-6 rounded-xl border border-brand-300 bg-brand-100 p-4 shadow-surface-soft">
          <p class="text-sm text-slate-700">
            <span class="font-semibold text-brand-900">Fastest response:</span>
            include your budget range and deadline in the message.
          </p>
        </div>

        <div class="mt-6 space-y-2 text-xs text-slate-600">
          <p><span class="font-semibold text-slate-700">Typical reply:</span> within 1 business day.</p>
          <p><span class="font-semibold text-slate-700">Best fit:</span> contractors and real estate operators who want a lead system, not a brochure site.</p>
        </div>
      </div>
    </aside>

    <!-- Right: Form -->
    <div class="lg:col-span-8">
      <div class="hs-card-brand">
        <div class="space-y-3">
          <p class="hs-pill-brand">Submit your inquiry</p>
          <p class="text-sm text-slate-600">Share a few details and we’ll respond with next steps.</p>
        </div>

        <form class="mt-6 space-y-5" method="POST" action="/contact" novalidate>
          <!-- Row 1 -->
          <div class="grid gap-4 sm:grid-cols-2">
            <div class="space-y-2">
              <label for="fullName" class="text-sm font-medium text-slate-900">
                Full name <span class="text-rose-600">*</span>
              </label>
              <input id="fullName" name="fullName" type="text" autocomplete="name" required value="{{formData.fullName}}" class="hs-input">
            </div>

            <div class="space-y-2">
              <label for="email" class="text-sm font-medium text-slate-900">
                Email <span class="text-rose-600">*</span>
              </label>
              <input id="email" name="email" type="email" autocomplete="email" required value="{{formData.email}}" class="hs-input">
            </div>
          </div>

          <!-- Row 2 -->
          <div class="grid gap-4 sm:grid-cols-2">
            <div class="space-y-2">
              <label for="phone" class="text-sm font-medium text-slate-900">Phone</label>
              <input id="phone" name="phone" type="tel" autocomplete="tel" placeholder="503·381·3014" value="{{formData.phone}}" class="hs-input">
            </div>

            <div class="space-y-2">
              <label for="company" class="text-sm font-medium text-slate-900">Company</label>
              <input id="company" name="company" type="text" autocomplete="organization" value="{{formData.company}}" class="hs-input">
            </div>
          </div>

          <!-- Row 3 -->
          <div class="grid gap-4 sm:grid-cols-2">
            <div class="space-y-2">
              <label for="service" class="text-sm font-medium text-slate-900">
                What do you need? <span class="text-rose-600">*</span>
              </label>
              <select id="service" name="service" required class="hs-select">
                <option value="" disabled {{#unless formData.service}}selected{{/unless}}>— Please choose —</option>
                <option value="website" {{#if (eq formData.service "website")}}selected{{/if}}>Website</option>
                <option value="webapp" {{#if (eq formData.service "webapp")}}selected{{/if}}>Web Application</option>
                <option value="ecommerce" {{#if (eq formData.service "ecommerce")}}selected{{/if}}>Ecommerce</option>
                <option value="website-ecommerce" {{#if (eq formData.service "website-ecommerce")}}selected{{/if}}>Website + Ecommerce</option>
                <option value="not-sure" {{#if (eq formData.service "not-sure")}}selected{{/if}}>Not sure yet</option>
              </select>
            </div>

            <div class="space-y-2">
              <label for="budget" class="text-sm font-medium text-slate-900">Budget range</label>
              <select id="budget" name="budget" class="hs-select">
                <option value="" {{#unless formData.budget}}selected{{/unless}}>— Optional —</option>
                <option value="2995-5495" {{#if (eq formData.budget "2995-5495")}}selected{{/if}}>$2,995 – $5,495</option>
                <option value="5495-7995" {{#if (eq formData.budget "5495-7995")}}selected{{/if}}>$5,495 – $7,995</option>
                <option value="8000-plus" {{#if (eq formData.budget "8000-plus")}}selected{{/if}}>$8,000+</option>
                <option value="not-sure" {{#if (eq formData.budget "not-sure")}}selected{{/if}}>Not sure yet</option>
              </select>
            </div>
          </div>

          <!-- Row 4 -->
          <div class="grid gap-4 sm:grid-cols-2">
            <div class="space-y-2">
              <label for="timeline" class="text-sm font-medium text-slate-900">Ideal timeline</label>
              <select id="timeline" name="timeline" class="hs-select">
                <option value="" {{#unless formData.timeline}}selected{{/unless}}>— Optional —</option>
                <option value="asap" {{#if (eq formData.timeline "asap")}}selected{{/if}}>ASAP (1–2 weeks)</option>
                <option value="2-4-weeks" {{#if (eq formData.timeline "2-4-weeks")}}selected{{/if}}>2–4 weeks</option>
                <option value="1-2-months" {{#if (eq formData.timeline "1-2-months")}}selected{{/if}}>1–2 months</option>
                <option value="flexible" {{#if (eq formData.timeline "flexible")}}selected{{/if}}>Flexible</option>
              </select>
            </div>

            <div class="space-y-2">
              <label for="source" class="text-sm font-medium text-slate-900">
                How did you hear about us? <span class="text-rose-600">*</span>
              </label>
              <select id="source" name="source" required class="hs-select">
                <option value="" disabled {{#unless formData.source}}selected{{/unless}}>— Please choose —</option>
                <option value="google" {{#if (eq formData.source "google")}}selected{{/if}}>Google</option>
                <option value="linkedin" {{#if (eq formData.source "linkedin")}}selected{{/if}}>LinkedIn</option>
                <option value="referral" {{#if (eq formData.source "referral")}}selected{{/if}}>Referral</option>
                <option value="clutch" {{#if (eq formData.source "clutch")}}selected{{/if}}>Clutch</option>
                <option value="other" {{#if (eq formData.source "other")}}selected{{/if}}>Other</option>
              </select>
            </div>
          </div>

          <!-- Message -->
          <div class="space-y-2">
            <label for="message" class="text-sm font-medium text-slate-900">
              Project details <span class="text-rose-600">*</span>
            </label>
            <textarea id="message" name="message" rows="6" required placeholder="What are you building? Any examples you like? Must-have features?" class="hs-textarea">{{formData.message}}</textarea>
          </div>

          <!-- Submit -->
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <button type="submit" class="hs-btn-primary w-full px-6 py-3 sm:w-auto">
              Send Message
            </button>

            <p class="text-xs text-slate-500">
              By submitting, you confirm you’re requesting a quote and agree to be contacted about your project.
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
