<section class="max-w-4xl mx-auto px-4 py-10">
  <a href="/portfolio" class="group inline-flex items-center gap-1 text-sm font-semibold text-brand-900">
    <span class="inline-block transition-transform duration-200 group-hover:-translate-x-1">←</span>
    <span class="underline-offset-4 decoration-2 group-hover:underline">Back to Portfolio</span>
  </a>

  <div class="mt-4 rounded-2xl border border-brand-300 bg-brand-50 p-7 shadow-surface-soft">
    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-brand-900">{{project.title}}</h1>

        {{#if project.type}}
          <p class="mt-2 text-sm font-semibold text-slate-500">{{project.type}}</p>
        {{/if}}

        {{#if project.summary}}
          <p class="mt-3 text-slate-600">{{project.summary}}</p>
        {{/if}}

        {{!-- Credibility strip (safe if missing) --}}
        <div class="mt-4 flex flex-wrap gap-2">
          {{#if project.scope}}
            <span class="text-xs rounded-full border border-brand-300 bg-brand-50 px-2 py-1 font-semibold text-slate-700 shadow-surface-soft">
              {{project.scope}}
            </span>
          {{/if}}

          {{#if project.timeline}}
            <span class="text-xs rounded-full border border-brand-300 bg-brand-50 px-2 py-1 font-semibold text-slate-700 shadow-surface-soft">
              Delivered in {{project.timeline}}
            </span>
          {{/if}}
        </div>
      </div>

      {{#if project.featured}}
        <span class="h-fit text-xs rounded-full border border-brand-300 bg-brand-100 px-2 py-1 font-semibold text-brand-900 shadow-surface-soft">
          Featured
        </span>
      {{/if}}
    </div>

    {{!-- STACK --}}
    {{#if project.stack}}
      <div class="mt-6">
        <h2 class="text-sm font-bold text-brand-900">Stack</h2>
        <div class="mt-2 flex flex-wrap gap-2">
          {{#each project.stack}}
            <span class="text-xs rounded-full border border-brand-300 bg-brand-50 px-2 py-1 text-slate-700">
              {{this}}
            </span>
          {{/each}}
        </div>
      </div>
    {{/if}}

    {{!-- HIGHLIGHTS --}}
    {{#if project.highlights}}
      <div class="mt-6">
        <h2 class="text-sm font-bold text-brand-900">Highlights</h2>
        <ul class="mt-2 space-y-2 text-sm text-slate-700">
          {{#each project.highlights}}
            <li class="flex gap-3">
              <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-brand-900"></span>
              <span class="leading-relaxed">{{this}}</span>
            </li>
          {{/each}}
        </ul>
      </div>
    {{/if}}

    {{!-- Problem / Solution --}}
    <div class="mt-8 grid gap-4 md:grid-cols-2">
      {{#if project.problem}}
        <div class="rounded-xl border border-brand-300 bg-brand-100 p-5 shadow-surface-soft">
          <h3 class="font-semibold text-brand-900">Problem</h3>
          <p class="mt-2 text-sm leading-relaxed text-slate-700">
            {{project.problem}}
          </p>
        </div>
      {{/if}}

      {{#if project.solution}}
        <div class="rounded-xl border border-brand-300 bg-brand-100 p-5 shadow-surface-soft">
          <h3 class="font-semibold text-brand-900">Solution</h3>

          {{!-- project.solution is an array (config-driven, avoids helper logic) --}}
          <ul class="mt-2 space-y-2 text-sm text-slate-700">
            {{#each project.solution}}
              <li class="flex gap-3">
                <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-brand-900"></span>
                <span class="leading-relaxed">{{this}}</span>
              </li>
            {{/each}}
          </ul>

          {{#if project.services}}
            <div class="mt-4">
              <p class="text-xs font-semibold text-slate-500">Delivered</p>
              <div class="mt-2 flex flex-wrap gap-2">
                {{#each project.services}}
                  <span class="text-xs rounded-full border border-brand-300 bg-brand-50 px-2 py-1 text-slate-700">
                    {{this}}
                  </span>
                {{/each}}
              </div>
            </div>
          {{/if}}
        </div>
      {{/if}}
    </div>

    {{!-- Outcome --}}
    {{#if project.outcome}}
      <div class="mt-4 rounded-xl border border-brand-300 bg-brand-50 p-5 shadow-surface-soft">
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
          <div>
            <h3 class="font-semibold text-brand-900">Outcome</h3>
            <p class="mt-1 text-sm text-slate-600">
              What changed after launch (conversion-focused and operations-friendly).
            </p>
          </div>

          {{#if cta.primaryHref}}
            <a
              href="{{cta.primaryHref}}"
              class="group hs-btn-secondary rounded-lg border-brand-300 text-brand-900 hover:bg-brand-100 shadow-surface-soft"
            >
              <span class="underline-offset-4 decoration-2 group-hover:underline">
                {{#if cta.primaryText}}{{cta.primaryText}}{{else}}Request a Quote{{/if}}
              </span>
              <span class="ml-2 inline-block transition-transform duration-200 group-hover:translate-x-1">→</span>
            </a>
          {{else}}
            <a
              href="/contact"
              class="group hs-btn-secondary rounded-lg border-brand-300 text-brand-900 hover:bg-brand-100 shadow-surface-soft"
            >
              <span class="underline-offset-4 decoration-2 group-hover:underline">
                {{#if cta.primaryText}}{{cta.primaryText}}{{else}}Request a Quote{{/if}}
              </span>
              <span class="ml-2 inline-block transition-transform duration-200 group-hover:translate-x-1">→</span>
            </a>
          {{/if}}
        </div>

        {{!-- project.outcome is an array (config-driven) --}}
        <ul class="mt-4 space-y-2 text-sm text-slate-700">
          {{#each project.outcome}}
            <li class="flex gap-3">
              <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-brand-900"></span>
              <span class="leading-relaxed">{{this}}</span>
            </li>
          {{/each}}
        </ul>
      </div>
    {{/if}}

    {{!-- Fallback blocks (only show if new fields are missing) --}}
    {{#unless project.problem}}
      <div class="mt-8 grid gap-4 md:grid-cols-2">
        <div class="rounded-xl border border-brand-300 bg-brand-100 p-5 shadow-surface-soft">
          <h3 class="font-semibold text-brand-900">What this demonstrates</h3>
          <ul class="mt-2 list-disc pl-5 text-sm text-slate-700">
            <li>Conversion-first layout and messaging</li>
            <li>Clean structure built for future expansion</li>
            <li>Fast, responsive customer experience</li>
          </ul>
        </div>

        <div class="rounded-xl border border-brand-300 bg-brand-100 p-5 shadow-surface-soft">
          <h3 class="font-semibold text-brand-900">Typical deliverables</h3>
          <ul class="mt-2 list-disc pl-5 text-sm text-slate-700">
            <li>Clear CTA flow + lead capture</li>
            <li>Mobile-first responsive build</li>
            <li>SEO-ready structure (titles/headings/metadata)</li>
          </ul>
        </div>
      </div>
    {{/unless}}

    <div class="mt-8 rounded-xl bg-slate-900 p-6 text-white flex flex-col md:flex-row md:items-center md:justify-between gap-4 shadow-surface">
      <div>
        <h3 class="text-lg font-bold">Want something like this?</h3>
        <p class="mt-1 text-white/80 text-sm">
          Send your goal + timeline and I’ll respond with a quote and next steps.
        </p>
      </div>

      {{#if cta.primaryHref}}
        <a
          href="{{cta.primaryHref}}"
          class="group inline-flex items-center justify-center rounded-lg bg-brand-50 px-5 py-3 font-semibold text-brand-900 transition hover:bg-slate-100 shadow-surface-soft"
        >
          <span class="underline-offset-4 decoration-2 group-hover:underline">
            {{#if cta.primaryText}}{{cta.primaryText}}{{else}}Request a Quote{{/if}}
          </span>
          <span class="ml-2 inline-block transition-transform duration-200 group-hover:translate-x-1">→</span>
        </a>
      {{else}}
        <a
          href="/contact"
          class="group inline-flex items-center justify-center rounded-lg bg-brand-50 px-5 py-3 font-semibold text-brand-900 transition hover:bg-slate-100 shadow-surface-soft"
        >
          <span class="underline-offset-4 decoration-2 group-hover:underline">
            {{#if cta.primaryText}}{{cta.primaryText}}{{else}}Request a Quote{{/if}}
          </span>
          <span class="ml-2 inline-block transition-transform duration-200 group-hover:translate-x-1">→</span>
        </a>
      {{/if}}
    </div>
  </div>
</section>
