<section class="max-w-6xl mx-auto px-4 py-10">
  <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold text-brand-900">Portfolio</h1>
      <p class="mt-2 text-slate-600">
        Conversion-first web builds and operator-friendly flows for contractors and real estate teams.
      </p>
      <p class="mt-2 text-sm text-slate-500">
        Each case study shows the problem, the system we built, and the outcome — without fluff.
      </p>
    </div>
  </div>

  {{!-- Robust empty-state: handles undefined AND [] --}}
  {{#if projects}}
    {{#if projects.length}}

      <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">

        {{!-- Featured first --}}
        {{#each projects}}
          {{#if featured}}
            <a
              href="/portfolio/{{slug}}"
              class="group flex h-full flex-col rounded-2xl border border-brand-300 bg-brand-50 p-5 shadow-surface-soft transition hover:bg-brand-100 hover:shadow-surface"
            >
              {{#if image}}
                <div class="mb-4 overflow-hidden rounded-xl border border-brand-300 bg-white shadow-surface-soft">
                  <div class="relative">
                    <img
                      src="{{image}}"
                      alt="{{title}} preview"
                      class="h-24 w-full object-cover opacity-90 grayscale-[25%] transition duration-200 group-hover:opacity-100 group-hover:grayscale-0"
                      loading="lazy"
                    />
                    <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-white/35 to-transparent"></div>
                  </div>
                </div>
              {{/if}}

              <div>
                <div class="flex items-start justify-between gap-3">
                  <div>
                    <h2 class="text-lg font-semibold text-brand-900">
                      {{title}}
                    </h2>

                    {{#if client}}
                      <p class="mt-1 text-xs font-semibold text-slate-500">
                        {{client}}
                      </p>
                    {{else}}
                      {{#if type}}
                        <p class="mt-1 text-xs font-semibold text-slate-500">
                          {{type}}
                        </p>
                      {{/if}}
                    {{/if}}
                  </div>

                  <span class="text-xs rounded-full border border-brand-300 bg-brand-100 px-2 py-1 font-semibold text-brand-900 shadow-surface-soft">
                    Featured
                  </span>
                </div>

                <p class="mt-3 text-sm text-slate-600">
                  {{summary}}
                </p>

                {{#if stack}}
                  <div class="mt-4 flex flex-wrap gap-2">
                    {{#each stack}}
                      <span class="text-xs rounded-full border border-brand-300 bg-brand-50 px-2 py-1 text-slate-700">
                        {{this}}
                      </span>
                    {{/each}}
                  </div>
                {{/if}}
              </div>

              <div class="mt-auto pt-5">
                <div class="text-sm font-semibold text-brand-900">
                  <span class="inline-flex items-center gap-1">
                    <span class="underline-offset-4 decoration-2 group-hover:underline">
                      View case study
                    </span>
                    <span class="inline-block transition-transform duration-200 group-hover:translate-x-1">
                      →
                    </span>
                  </span>
                </div>

                <p class="mt-2 text-xs text-slate-500">
                  Scope, approach, and outcome — explained clearly.
                </p>
              </div>
            </a>
          {{/if}}
        {{/each}}

        {{!-- Non-featured after --}}
        {{#each projects}}
          {{#unless featured}}
            <a
              href="/portfolio/{{slug}}"
              class="group flex h-full flex-col rounded-2xl border border-brand-300 bg-brand-50 p-5 shadow-surface-soft transition hover:bg-brand-100 hover:shadow-surface"
            >
              {{#if image}}
                <div class="mb-4 overflow-hidden rounded-xl border border-brand-300 bg-white shadow-surface-soft">
                  <div class="relative">
                    <img
                      src="{{image}}"
                      alt="{{title}} preview"
                      class="h-24 w-full object-cover opacity-90 grayscale-[25%] transition duration-200 group-hover:opacity-100 group-hover:grayscale-0"
                      loading="lazy"
                    />
                    <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-white/35 to-transparent"></div>
                  </div>
                </div>
              {{/if}}

              <div>
                <div class="flex items-start justify-between gap-3">
                  <div>
                    <h2 class="text-lg font-semibold text-brand-900">
                      {{title}}
                    </h2>

                    {{#if client}}
                      <p class="mt-1 text-xs font-semibold text-slate-500">
                        {{client}}
                      </p>
                    {{else}}
                      {{#if type}}
                        <p class="mt-1 text-xs font-semibold text-slate-500">
                          {{type}}
                        </p>
                      {{/if}}
                    {{/if}}
                  </div>
                </div>

                <p class="mt-3 text-sm text-slate-600">
                  {{summary}}
                </p>

                {{#if stack}}
                  <div class="mt-4 flex flex-wrap gap-2">
                    {{#each stack}}
                      <span class="text-xs rounded-full border border-brand-300 bg-brand-50 px-2 py-1 text-slate-700">
                        {{this}}
                      </span>
                    {{/each}}
                  </div>
                {{/if}}
              </div>

              <div class="mt-auto pt-5">
                <div class="text-sm font-semibold text-brand-900">
                  <span class="inline-flex items-center gap-1">
                    <span class="underline-offset-4 decoration-2 group-hover:underline">
                      View case study
                    </span>
                    <span class="inline-block transition-transform duration-200 group-hover:translate-x-1">
                      →
                    </span>
                  </span>
                </div>

                <p class="mt-2 text-xs text-slate-500">
                  Scope, approach, and outcome — explained clearly.
                </p>
              </div>
            </a>
          {{/unless}}
        {{/each}}

      </div>

    {{else}}
      <div class="mt-8 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <p class="text-sm text-slate-600">
          No portfolio projects added yet.
        </p>
      </div>
    {{/if}}
  {{else}}
    <div class="mt-8 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <p class="text-sm text-slate-600">
        Portfolio items are not available right now.
      </p>
    </div>
  {{/if}}

  <div class="mt-10 rounded-2xl bg-slate-900 p-8 text-white flex flex-col md:flex-row md:items-center md:justify-between gap-4 shadow-surface">
    <div>
      <h3 class="text-xl font-bold">Want a site that pulls leads?</h3>
      <p class="mt-1 text-white/80">
        Tell me what you do and what you need. I’ll reply with next steps, options, pricing, and a realistic timeline.
      </p>
      <p class="mt-2 text-sm text-white/60">
        Built for contractors and real estate operators — clean, fast, and conversion-first.
      </p>
    </div>

    {{!-- ✅ Updated button style to match your “good” home/case-study button treatment --}}
    <a
      href="{{#if cta.primaryHref}}{{cta.primaryHref}}{{else}}/contact{{/if}}"
      class="group inline-flex w-full sm:w-auto items-center justify-center rounded-lg bg-brand-50 px-5 py-3 font-semibold text-brand-900 transition
             hover:bg-slate-100 shadow-surface-soft"
    >
      <span class="underline-offset-4 decoration-2 group-hover:underline">
        {{#if cta.primaryText}}{{cta.primaryText}}{{else}}Request a Quote{{/if}}
      </span>
      <span class="ml-2 inline-block transition-transform duration-200 group-hover:translate-x-1">→</span>
    </a>
  </div>
</section>
