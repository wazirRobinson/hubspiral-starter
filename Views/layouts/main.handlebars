<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>
      {{#if pageTitle}}
        {{pageTitle}}
      {{else}}
        {{#if site.businessName}}
          {{site.businessName}}
        {{else}}
          {{site.name}}
        {{/if}}
      {{/if}}
    </title>

    <meta
      name="description"
      content="{{#if metaDescription}}{{metaDescription}}{{else}}{{#if site.tagline}}{{site.tagline}}{{else}}HubSpiral — fast, clean, conversion-first websites.{{/if}}{{/if}}"
    />

    <link rel="stylesheet" href="/css/styles.css?v={{assetVersion}}" />

    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v={{assetVersion}}">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v={{assetVersion}}">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v={{assetVersion}}">
    <link rel="manifest" href="/site.webmanifest?v={{assetVersion}}">
  </head>

  <body class="hs-body">
    <a id="top" aria-hidden="true"></a>

    <!-- HEADER (nav only — no CTA) -->
    <header class="sticky top-0 z-50 border-b border-slate-200 bg-white/90 backdrop-blur">
      <div class="max-w-6xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between gap-4">

          <!-- Logo -->
          <a href="/" class="flex items-center gap-3">
            <img
              src="/images/logo.svg?v={{assetVersion}}"
              alt="{{#if site.businessName}}{{site.businessName}}{{else}}{{site.name}}{{/if}} logo"
              class="h-8 w-auto"
              loading="eager"
            />
            <span class="text-sm font-semibold text-slate-900">
              {{#if site.businessName}}{{site.businessName}}{{else}}{{site.name}}{{/if}}
            </span>
          </a>

          <!-- Desktop Nav -->
          <nav class="hidden md:flex items-center gap-6" aria-label="Primary navigation">
            {{#each nav}}
              <a
                href="{{href}}"
                class="text-sm font-semibold text-slate-700 hover:text-brand-900 transition"
              >
                {{label}}
              </a>
            {{/each}}
          </nav>
        </div>

        <!-- Mobile Nav -->
        <nav class="mt-3 flex flex-wrap gap-2 md:hidden" aria-label="Mobile navigation">
          {{#each nav}}
            <a
              href="{{href}}"
              class="inline-flex items-center rounded-lg border border-brand-300 bg-brand-50 px-3 py-2 text-xs font-semibold text-brand-900 shadow-surface-soft transition
                     hover:bg-brand-100 hover:shadow-surface"
            >
              {{label}}
            </a>
          {{/each}}
        </nav>
      </div>
    </header>

    <main class="hs-main">
      {{{body}}}
    </main>

    {{> footer}}
  </body>
</html>
